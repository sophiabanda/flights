<%- include('../partials/header') %>

<table>
    <thead>
      <tr>
        <th>Flight No.</th>
        <th>Airline</th>
        <th>Airport</th>
        <th>Departure</th>
        <th>Details</th>
      </tr>
    </thead>
    <tbody>
      <% flight.forEach(function(f) { %>
        <tr>
          <td><%= f.flightNumber %></td>
          <td><%= f.airline %></td>
          <td><%= f.airport %></td>
          <td><%= f.departs %></td>
          <td><a class='button' href="/flights/<%= f._id %>">Details</a></td>
        </tr>
        <% }); %>
      </tbody>
    </table>

<%- include('../partials/footer') %>